{
	"name": "electron-serve",
	"version": "2.1.1",
	"description": "Static file serving for Electron apps",
	"license": "MIT",
	"repository": "sindresorhus/electron-serve",
	"funding": "https://github.com/sponsors/sindresorhus",
	"author": {
		"name": "Sindre Sorhus",
		"email": "sindresorhus@gmail.com",
		"url": "https://sindresorhus.com"
	},
	"type": "module",
	"exports": {
		"types": "./index.d.ts",
		"default": "./index.js"
	},
	"sideEffects": false,
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"start": "electron test/fixture.js",
		"test": "xo && node test/test.js && tsc index.d.ts"
	},
	"files": [
		"index.js",
		"index.d.ts"
	],
	"keywords": [
		"electron",
		"serve",
		"serving",
		"server",
		"static",
		"file",
		"dev",
		"development",
		"react",
		"router",
		"web",
		"app",
		"history",
		"pushstate",
		"replacestate",
		"href",
		"url"
	],
	"devDependencies": {
		"electron": "^38.1.0",
		"typescript": "^5.9.2",
		"xo": "^1.2.2"
	},
	"xo": {
		"rules": {
			"n/no-extraneous-import": "off",
			"ava/no-import-test-files": "off",
			"n/prefer-global/process": "off"
		}
	}
}
